@model CMPE344.ViewModels.Account.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>
<div class="row g-5">
    <div class="col">
        <form asp-controller="Account" asp-action="EditProfile" asp-antiforgery="true" method="post" novalidate>
            <h2>Manage your profile</h2>
            <hr>

            <div class="row g-2 mb-3">
                <div class="col-md form-floating">
                    <input asp-for="@Model.FirstName" class="form-control" placeholder="@Model.FirstName" />
                    <label asp-for="@Model.FirstName" class="form-label">First name</label>
                    <span asp-validation-for="@Model.FirstName" class="text-danger" />
                </div>

                <div class="col-md form-floating">
                    <input asp-for="@Model.LastName" class="form-control" placeholder="@Model.LastName" />
                    <label asp-for="@Model.LastName" class="form-label">Last name</label>
                    <span asp-validation-for="@Model.LastName" class="text-danger" />
                </div>
            </div>

            <div class="mb-3 form-floating">
                <input asp-for="@Model.Email" class="form-control" aria-describedby="emailHelp" placeholder="@Model.Email">
                <label asp-for="@Model.Email" class="form-label"></label>
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                <span asp-validation-for="@Model.Email" class="text-danger" />
            </div>

            <div class="mb-3 form-floating">
                <input asp-for="@Model.Address" class="form-control" placeholder="@Model.Address">
                <label asp-for="@Model.Address" class="form-label"></label>
                <span asp-validation-for="@Model.Address" class="text-danger" />
            </div>

            <div class="mb-3 form-floating">
                <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="@Model.PhoneNumber">
                <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger" />
            </div>

            @if (Model.IsCustomer)
            {
                <h4>Notification Preferences</h4>
                <hr>

                <div class="form-check form-switch">
                    <input asp-for="@Model.EmailPreference" class="form-check-input" />
                    <label asp-for="@Model.EmailPreference" class="form-check-label"></label>
                    <span asp-validation-for="@Model.EmailPreference" class="text-danger" />
                </div>

                <div class="form-check form-switch mb-3">
                    <input asp-for="@Model.PhonePreference" class="form-check-input" />
                    <label asp-for="@Model.PhonePreference" class="form-check-label"></label>
                    <span asp-validation-for="@Model.PhonePreference" class="text-danger" />
                </div>
            }
            else
            {
                <div class="mb-3 form-floating">
                    <input asp-for="@Model.AgencyName" class="form-control" placeholder="@Model.AgencyName">
                    <label asp-for="@Model.AgencyName" class="form-label"></label>
                    <span asp-validation-for="@Model.AgencyName" class="text-danger" />
                </div>

                <div class="mb-3 form-floating">
                    <input asp-for="@Model.CommissionRate" type="number" step="0.1" class="form-control" placeholder="@Model.CommissionRate">
                    <label asp-for="@Model.CommissionRate" class="form-label"></label>
                    <span asp-validation-for="@Model.CommissionRate" class="text-danger" />
                </div>
            }

            <button type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
        </form>
    </div>
    <div class="col">
        <form asp-controller="Account" asp-action="ChangePassword" asp-antiforgery="true" method="post" novalidate>
            <h2>Change password</h2>
            <hr>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3 form-floating">
                <input asp-for="@Model.OriginalPassword" type="password" class="form-control" placeholder="Original password">
                <label asp-for="@Model.OriginalPassword" class="form-label"></label>
                <span asp-validation-for="@Model.OriginalPassword" class="text-danger" />
            </div>

            <div class="mb-3 form-floating">
                <input asp-for="@Model.NewPassword" type="password" class="form-control" placeholder="New password">
                <label asp-for="@Model.NewPassword" class="form-label"></label>
                <span asp-validation-for="@Model.NewPassword" class="text-danger" />
            </div>

            <div class="mb-3 form-floating">
                <input asp-for="@Model.ConfirmNewPassword" type="password" class="form-control" placeholder="Confirm password">
                <label asp-for="@Model.ConfirmNewPassword" class="form-label"></label>
                <span asp-validation-for="@Model.ConfirmNewPassword" class="text-danger" />
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Change password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}